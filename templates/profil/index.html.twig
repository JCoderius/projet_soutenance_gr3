{% extends 'base.html.twig' %}

{% block title %}Mon Profil {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Mon Profil</h1>

                {{ user.email }}
                
              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><p> {{ stats }} %</p></div>
              </div>
                <p>vous avez remplit votre profil a hauteur de {{ stats }} %.</p>
            </div>
            <div class="col-sm">


                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
