{% extends 'admin.html.twig' %}

{% block title %}Departements index{% endblock %}

{% block body %}
    <h1>Liste des départements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numéro</th>
                <th>Nom du département</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.numero }}</td>
                <td>{{ departement.nom }}</td>
                <td>
                    <a href="{{ path('departements_show', {'id': departement.id}) }}"><i class="fas fa-eye" title="afficher"></i></a>
                    <a href="{{ path('departements_edit', {'id': departement.id}) }}"><i class="fas fa-user-edit" title="éditer"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departements_new') }}"><i class="fas fa-plus"></i>Ajouter un département</a>
{% endblock %}
