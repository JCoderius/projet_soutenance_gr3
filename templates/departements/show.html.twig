{% extends 'admin.html.twig' %}

{% block title %}Departements{% endblock %}

{% block body %}
    <h1>Affichage département</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ departement.numero }}</td>
            </tr>
            <tr>
                <th>Nom du département</th>
                <td>{{ departement.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('departements_index') }}">Retour à la liste</a>

    <a href="{{ path('departements_edit', {'id': departement.id}) }}">Editer</a>

    {{ include('departements/_delete_form.html.twig') }}
{% endblock %}
