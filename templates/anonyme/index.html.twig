{% extends 'base.html.twig' %}
{% block title %}departement
    {{ departement.numero }}
{% endblock %}
{% block body %}
    <section id="les_selections">
        <div class="navbar1">
            <nav class="navbar navbar-light bg-light">
                <form class="form-inline" action="{{ path('anonyme2')}}">

                    <select id="profil_dep_id" name="departement">
                        <option value="">Departements</option>
                        {% for depall in depalls %}

                            <option {% if(depall.numero == departement.numero) %} selected="selected" {% endif %} value="{{ depall.numero }}">{{ depall.numero }}
                                -
                                {{ depall.nom }}</option>
                        {% endfor %}
                    </select>

                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
                </form>

            </nav>
        </div>
        <h2>bienvenue dans le département
            {{ departement.numero }}</h2>
        <div class="clear"></div>

        <div class="global image">
            <img src="{{ asset('asset/img/ble.jpg') }}" alt="blé">
        </div>

        {% for user in users %}
            <div class="paginator">
                <div class="global prod">
                  {% if user.images %}
                    <img src="{{ asset('asset/img/photos/%s'|format(user.images)) }}" alt="">
                  {% else %}
                    <img src="{{ asset('asset/img/default-avatar.png') }}">
                  {% endif %}
                    <p class="ident">{{ user.lastname }}
                        {{ user.firstname }}</p>
                    <p>{{ user.email }}</p>
                    {% for catt in user.cat %}
                        <p>Produits proposés :
                            {{ catt.produit }}</p>
                    {% endfor %}
                    <p>Adresse :
                        {{ user.adress }}</p>
                    <p>Code Postal :
                        {{ user.cp }}</p>
                    <p>Tel : {{ user.phone }}</p>
                </div>
            </div>
        {% endfor %}

    </div>

    <div class="clear"></div>
<div class="pagin">
  {{ paginator|raw }}
  </div>

</section>{% endblock %}
